{
  "name": "Marvel-Card-Game",
  "version": "1.0.0",
  "description": "Juego de cartas usando la API de Marvel, probando tecnologias Frontend. Idea Original de Platzi",
  "main": "index.js",
  "scripts": {
    "build-css": "stylus -u nib -c -w -o public/css/ dev/stylus/estilos.styl",
    "build-html": "jade -P -w -o ./public ./dev/index.jade",
    "build-js": "browserify ./dev/app.js -t babelify -o ./public/js/app.js",
    "babel": "babel -w ./dev --out-dir ./public/js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/landinezrichard/Marvel-Card-Game.git"
  },
  "author": "Ricardo Land√≠nez <landinezrichard@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.6.5",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "jade": "^1.11.0",
    "nib": "^1.1.0",
    "stylus": "^0.51.1"
  },
  "dependencies": {
    "jquery": "^2.1.4"
  }
}
